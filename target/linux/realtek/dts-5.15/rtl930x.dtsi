/dts-v1/;

#include <dt-bindings/clock/rtl83xx-clk.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>

/ {
	#address-cells = <1>;
	#size-cells = <1>;

	compatible = "realtek,rtl838x-soc";

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;
		frequency = <800000000>;

		cpu@0 {
			compatible = "mips,mips34Kc";
			reg = <0>;
		};
	};

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;

		led-boot = &sys_led;
		led-failsafe = &sys_led;
		led-running = &sys_led;
		led-upgrade = &sys_led;
	};

	chosen {
		bootargs = "earlycon";
		stdout-path = "serial0:115200n8";
	};

	cpuintc: cpuintc {
		compatible = "mti,cpu-interrupt-controller";
		#address-cells = <0>;
		#interrupt-cells = <1>;
		interrupt-controller;
	};

	keys {
		compatible = "gpio-keys";

		reset_button: reset {
			label = "reset";
			linux,code = <KEY_RESTART>;

			status = "disabled";
		};
	};

	leds {
		compatible = "gpio-leds";

		pinctrl-names = "default";
		pinctrl-0 = <&pinmux_disable_sys_led>;

		sys_led: sys-led {
			color = <LED_COLOR_ID_GREEN>;
			function = LED_FUNCTION_STATUS;
			gpios = <&gpio0 0 GPIO_ACTIVE_HIGH>;
			panic-indicator;

			status = "disabled";
		};
	};

	lx_clk: lx_clk {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency  = <175000000>;
	};

	lxp: lexra-busp {
		compatible = "lexra-bus", "simple-bus";
		#address-cells = <1>;
		#size-cells = <1>;
		ranges = <0x18000000 0x18000000 0x200000>;

		gpio0: gpio-controller@18003300 {
			compatible = "realtek,rtl9300-gpio", "realtek,otto-gpio";
			reg = <0x18003300 0x1c>, <0x18003338 0x8>;

			gpio-controller;
			#gpio-cells = <2>;
			ngpios = <24>;

			interrupt-controller;
			#interrupt-cells = <2>;
			interrupt-parent = <&intc>;
			interrupts = <13 1>;
		};

		intc: interrupt-controller@18003000 {
			compatible = "realtek,rtl9300-intc", "realtek,rtl-intc";
			reg = <0x18003000 0x18>, <0x18003018 0x18>;
			interrupt-controller;
			#interrupt-cells = <2>;

			interrupt-parent = <&cpuintc>;
			interrupts = <2>, <3>, <4>, <5>, <6>, <7>;
		};

		spi0: spi@18001200 {
			compatible = "realtek,rtl8380-spi";
			reg = <0x18001200 0x100>;

			#address-cells = <1>;
			#size-cells = <0>;
		};

		timer0: timer@18003200 {
			compatible = "realtek,rtl930x-timer", "realtek,otto-timer";
			reg = <0x18003200 0x10>,
			      <0x18003210 0x10>,
			      <0x18003220 0x10>,
			      <0x18003230 0x10>,
			      <0x18003240 0x10>;

			interrupt-parent = <&intc>;
			interrupts = <7 4>, <8 4>, <9 4>, <10 4>, <11 4>;
			clocks = <&lx_clk>;
		};

		uart0: uart@18002000 {
			compatible = "ns16550a";
			reg = <0x18002000 0x100>;

			clocks = <&lx_clk>;

			interrupt-parent = <&intc>;
			interrupts = <30 1>;

			reg-io-width = <1>;
			reg-shift = <2>;
			fifo-size = <1>;
			no-loopback-test;
		};

		uart1: uart@18002100 {
			compatible = "ns16550a";
			reg = <0x18002100 0x100>;

			clocks = <&lx_clk>;

			interrupt-parent = <&intc>;
			interrupts = <31 0>;

			reg-io-width = <1>;
			reg-shift = <2>;
			fifo-size = <1>;
			no-loopback-test;

			status = "disabled";
		};

		watchdog0: watchdog@18003260 {
			compatible = "realtek,rtl9300-wdt";
			reg = <0x18003260 0xc>;

			realtek,reset-mode = "soc";

			clocks = <&lx_clk>;
			timeout-sec = <30>;

			interrupt-parent = <&intc>;
			interrupt-names = "phase1", "phase2";
			interrupts = <5 4>, <6 4>;
		};
	};

	lx0: lexra-bus0 {
		compatible = "lexra-bus", "simple-bus";
		#address-cells = <1>;
		#size-cells = <1>;
		ranges = <0x1b000000 0x1b000000 0x10000>;

		ethernet0: ethernet@1b00a300 {
			compatible = "realtek,rtl838x-eth";
			reg = <0x1b00a300 0x100>;

			interrupt-parent = <&intc>;
			interrupts = <24 3>;

			phy-mode = "internal";

			fixed-link {
				speed = <1000>;
				full-duplex;
			};
		};

		pinmux_led: pinmux@1b00cc00 {
			compatible = "pinctrl-single";
			reg = <0x1b00cc00 0x4>;

			pinctrl-single,bit-per-mux;
			pinctrl-single,register-width = <32>;
			pinctrl-single,function-mask = <0x1>;
			#pinctrl-cells = <2>;

			/* enable GPIO 0 */
			pinmux_disable_sys_led: disable_sys_led {
				pinctrl-single,bits = <0x0 0x0 0x1000>;
			};
		};

		switch0: switch@1b000000 {
			compatible = "realtek,rtl83xx-switch";

			interrupt-parent = <&intc>;
			interrupts = <23 2>;
		};
	};
};
