		)>;
		led-set = <0>;
		phy-handle = <&phy20>;
		phy-mode = "10gbase-r";
		managed = "in-band-status";
		sfp = <&sfp3>;
	};

	port@24 {
		reg = <24>;
		label = "lan5";
		led-num = <(
			RTL93XX_LED_NUM0 | /* Lime */
			RTL93XX_LED_NUM1 | /* Lime */
			RTL93XX_LED_NUM2   /* Lime */
		)>;
		led-set = <0>;
		phy-handle = <&phy24>;
		phy-mode = "10gbase-r";
		managed = "in-band-status";
		sfp = <&sfp4>;
	};

	port@25 {
		reg = <25>;
		label = "lan6";
		led-num = <(
			RTL93XX_LED_NUM0 | /* Lime */
			RTL93XX_LED_NUM1 | /* Lime */
			RTL93XX_LED_NUM2   /* Lime */
		)>;
		led-set = <0>;
		phy-handle = <&phy25>;
		phy-mode = "10gbase-r";
		managed = "in-band-status";
		sfp = <&sfp5>;
	};

	port@26 {
		reg = <26>;
		label = "lan7";
		led-num = <(
			RTL93XX_LED_NUM0 | /* Lime */
			RTL93XX_LED_NUM1 | /* Lime */
			RTL93XX_LED_NUM2   /* Lime */
		)>;
		led-set = <0>;
		phy-handle = <&phy26>;
		phy-mode = "10gbase-r";
		managed = "in-band-status";
		sfp = <&sfp6>;
	};

	port@27 {
		reg = <27>;
		label = "lan8";
		led-num = <(
			RTL93XX_LED_NUM0 | /* Lime */
			RTL93XX_LED_NUM1 | /* Lime */
			RTL93XX_LED_NUM2   /* Lime */
		)>;
		led-set = <0>;
		phy-handle = <&phy27>;
		phy-mode = "10gbase-r";
		managed = "in-band-status";
		sfp = <&sfp7>;
	};
};
